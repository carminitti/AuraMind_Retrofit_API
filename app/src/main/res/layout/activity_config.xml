<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#86A6A3"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seja bem-vindo às configurações!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center"/>

    <!-- Texto Notificações -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificações do APP"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <!-- Notificações -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Switch
            android:id="@+id/switchNotificacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bell_android_48dp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <!-- Texto Acesso a Dados Pessoais -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acesso a dados pessoais"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <!-- Acesso a Dados Pessoais -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Switch
            android:id="@+id/switchDados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user_check_android_48dp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <!-- Texto Cores -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cores do plano de fundo"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <!-- Cores do Plano de Fundo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/btnCores"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_palette_android_48dp"
            android:layout_marginRight="12dp"/>
    </LinearLayout>

    <!-- Empurra a barra para o rodapé -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Barra de Navegação Inferior -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:background="@android:color/white"
        android:layout_gravity="bottom"
        android:layout_marginTop="32dp">

        <ImageButton
            android:id="@+id/navAgenda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_music_time_android_48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Agenda"/>

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home_android_48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Home"/>

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_person_android_48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Perfil"/>

        <ImageButton
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_settings2_android_48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Configurações"/>
    </LinearLayout>

</LinearLayout>
