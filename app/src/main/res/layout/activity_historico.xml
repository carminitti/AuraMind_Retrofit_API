<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#86A6A3"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloHistorico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seja bem-vindo ao seu histórico!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="28dp" />

    <!-- Item 1 -->
    <TextView
        android:id="@+id/tvItemProblemas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Histórico de problemas e suas soluções"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnVerProblemas"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Ver"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#5DADE2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp" />

    <!-- Item 2 -->
    <TextView
        android:id="@+id/tvItemConversas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Histórico de conversas"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnVerConversas"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Ver"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#5DADE2"
        android:layout_marginTop="10dp" />

    <!-- Empurra a barra para o rodapé -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Barra de Navegação Inferior (igual às outras telas) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/navAgenda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_music_android_48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Agenda" />

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home_android_48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_person_android_48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Perfil" />

        <ImageButton
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_settings_android_48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Configurações" />
    </LinearLayout>
</LinearLayout>
