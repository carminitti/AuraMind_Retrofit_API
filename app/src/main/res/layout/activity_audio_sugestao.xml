<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86A6A3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título (pode quebrar em 2 linhas) -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sugestões de áudios\npara você"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Voltar (ícone + texto) -->
        <LinearLayout
            android:id="@+id/btnVoltarRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivVoltar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back_android_48dp"
                android:tint="@android:color/black"
                android:contentDescription="Voltar" />

            <TextView
                android:id="@+id/tvVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Players Spotify (altura típica de embed: 200–380dp) -->
        <android.webkit.WebView
            android:id="@+id/webAudio1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <android.webkit.WebView
            android:id="@+id/webAudio2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <android.webkit.WebView
            android:id="@+id/webAudio3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
